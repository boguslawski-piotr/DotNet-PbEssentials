<?xml version="1.0" encoding="UTF-8"?>
<pbXForms:ContentView
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:pbXForms="clr-namespace:pbXForms;assembly=pbXForms"
	xmlns:local="clr-namespace:MDP"
	x:Class="MDP.MasterView1"
	BackgroundColor="Aqua">

	<pbXForms:ContentView.ViewContent>

		<StackLayout
			Orientation="Vertical"
			VerticalOptions="CenterAndExpand">

			<Label
				HorizontalTextAlignment="Center"
				FontSize="Large"
				Text="Master view number 1" />

			<Button
				Text="Show master view 2"
				Clicked="master2" />

			<Button
				Text="Show detail view 1" 
				Clicked="detail1"/>

			<Button
				Text="Show detail view 2"
				Clicked="detail2" />
			
		</StackLayout>

	</pbXForms:ContentView.ViewContent>

	<pbXForms:ContentView.ToolBarContent>

		<StackLayout
			Orientation="Horizontal"
			HorizontalOptions="FillAndExpand"
			BackgroundColor="Beige">
			
			<pbXForms:PITextButton
				Padding="20"
				HorizontalOptions="CenterAndExpand"
				Text="open nav drawer" 
				Clicked="navdrawer"/>

		</StackLayout>

	</pbXForms:ContentView.ToolBarContent>

</pbXForms:ContentView>
